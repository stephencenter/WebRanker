<html>
    <head>
        @{ViewBag.Title = "Delete";}
        <link href="https://fonts.googleapis.com/css?family=Nunito|Raleway|Rubik" rel="stylesheet">
    </head>

    <body>
        @model WebRanker.Models.DetailsModel
        <h3>Are you sure you want to delete "@Html.DisplayFor(model => model.Title)"?</h3>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-success btn-large" })
                <input type="submit" value="Delete" class="btn btn-danger btn-large" />
            </div>
            }
        </div>
    </body>
</html>
