<html>
    <head>
        @{ViewBag.Title = "Create";}
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    </head>

    <body>
        @model WebRanker.Models.CreateModel
        <h3>Create a new list</h3>
        <h3 style="font-size: small">Put each list item on it's own line by hitting enter</h3>
        
        @if (TempData.ContainsKey("SaveResult"))
        {
            <div class="alert alert-danger fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                @TempData["SaveResult"]
            </div>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2", @style = "width: 7em"})
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TheList, htmlAttributes: new { @class = "control-label col-md-2", @style = "width: 7em" })
                    @Html.TextAreaFor(model => model.TheList, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TheList, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-large" style="margin-left: 7em"/>
                    @Html.ActionLink("Cancel", "Index", "Collection", null, new { @class = "btn btn-danger btn-large" })
                </div>
            </div>
        }
    </body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}